@model Katalog_za_knigi.DTOs.BookDTO

<div class="container mt-5">
    <h2 class="text-center">Edit Book</h2>
    <form asp-action="Edit" method="post" class="bg-dark text-light p-4 rounded">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label>Title</label>
            <input asp-for="Title" class="form-control bg-secondary text-light border-0" />
        </div>

        <div class="form-group mb-3">
            <label>Author</label>
            <input asp-for="Author" class="form-control bg-secondary text-light border-0" />
        </div>

        <div class="form-group mb-3">
            <label>Price</label>
            <input asp-for="Price" class="form-control bg-secondary text-light border-0" />
        </div>

        <div class="form-group mb-3">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control bg-secondary text-light border-0"></textarea>
        </div>

        <div class="form-group mb-3">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control bg-secondary text-light border-0">
                <option value="@null">Choose Category</option>
                @if (Model.Categories is not null)
                {
                    foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control bg-secondary text-light border-0" />
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
