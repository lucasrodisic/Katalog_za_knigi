@model Katalog_za_knigi.DTOs.BookDTO

<div class="container mt-5">
    <h2 class="mb-4 text-center">Create Book</h2>
    <form asp-action="Create" method="post" class="bg-secondary p-4 rounded">
        <div class="form-group mb-3">
            <label>Title</label>
            <input asp-for="Title" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Author</label>
            <input asp-for="Author" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Price</label>
            <input asp-for="Price" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control bg-dark text-light border-light"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control bg-dark text-light border-light">
                <option value="@null">Choose Category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
