@model IEnumerable<Katalog_za_knigi.DTOs.BookDTO>

<h2>Search Results</h2>
@if (!Model.Any())
{
    <p>No books found matching your search.</p>
}
else
{
    <ul>
        @foreach (var book in Model)
        {
            <li>@book.Title by @book.Author - <a asp-action="Details" asp-route-id="@book.Id">Details</a></li>
        }
    </ul>
}