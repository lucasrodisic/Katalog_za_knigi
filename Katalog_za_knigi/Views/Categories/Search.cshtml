@model IEnumerable<Katalog_za_knigi.DTOs.CategoryDTO>

<h2>Search Results</h2>
@if (!Model.Any())
{
    <p>No books found matching your search.</p>
}
else
{
    <ul>
        @foreach (var category in Model)
        {
            <li>Category - @category.Name - <a asp-action="Details" asp-route-id="@category.Id">Details</a></li>
        }
    </ul>
}